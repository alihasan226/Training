<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

<LinearLayout
    android:id="@+id/linearlayout_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:paddingTop="15dp"
    android:orientation="vertical">

    <com.oasissnacks.oasissnacks.utils.CustomEditText
        android:id="@+id/etApplyCoupon"
        android:visibility="visible"

        style="@style/OpenSans_Regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_weight="0.5"
        android:hint="Coupon Code"

        android:inputType="textCapSentences"
        android:textCursorDrawable="@drawable/cursorcolor"
        android:backgroundTint="@color/black"
        android:maxLength="15"

        android:maxLines="1"
        android:textSize="14sp"
        tools:ignore="RtlCompat" />
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="#e2e2e2" />

    <LinearLayout

        android:visibility="visible"
        android:id="@+id/llButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal"

        android:weightSum="1">




        <com.oasissnacks.oasissnacks.utils.CustomTextView
            style="@style/OpenSans_Regular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4975"
            android:id="@+id/btnCancel"

            android:text="CANCEL"

            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp" />


        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.004"
            android:background="#10000000" />


        <com.oasissnacks.oasissnacks.utils.CustomTextView
            style="@style/OpenSans_Regular"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:id="@+id/btnApply"
            android:layout_height="wrap_content"
            android:layout_weight="0.4975"
            android:text="APPLY"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />



    </LinearLayout>
    </LinearLayout>


</RelativeLayout>
