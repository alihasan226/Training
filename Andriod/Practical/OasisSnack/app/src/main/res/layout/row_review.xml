<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/llRview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/llProductReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:orientation="vertical"
                tools:ignore="RtlCompat">

                <com.oasissnacks.oasissnacks.utils.CustomTextView
                    android:id="@+id/tvReviewDescription"
                    style="@style/OpenSans_Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/llStar"
                    android:text="Wonderful"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    tools:ignore="RtlCompat" />

                <ImageView

                    android:id="@+id/ivReviewImage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@id/llProductReview"
                tools:ignore="RtlCompat">

                <LinearLayout
                    android:id="@+id/llStar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_star_review"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="10dp"
                    android:layout_marginTop="3dp"
                    android:paddingEnd="10dp">

                    <com.oasissnacks.oasissnacks.utils.CustomTextView
                        android:id="@+id/tvRating"
                        style="@style/OpenSans_Regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:text="5"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_star_white_24dp" />

                </LinearLayout>

                <com.oasissnacks.oasissnacks.utils.CustomTextView
                    android:id="@+id/tvProductName"

                    style="@style/OpenSans_SemiBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/llStar"
                    android:text="Wonderful"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    tools:ignore="RtlCompat" />


                <com.oasissnacks.oasissnacks.utils.CustomTextView
                    android:id="@+id/tvTitleReview"
                    style="@style/OpenSans_LightItalic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/llStar"
                    android:text="Wonderful"
                    android:textColor="@color/black"
                    android:layout_marginRight="10dp"
                    android:textSize="12sp"
                    tools:ignore="RtlCompat" />

            </LinearLayout>

        </RelativeLayout>

        <com.oasissnacks.oasissnacks.utils.CustomTextView
            android:id="@+id/tvReviewGivenPersonName"
            style="@style/OpenSans_Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@id/llRview"
            android:padding="10dp"
            android:layout_toRightOf="@id/llStar"
            android:layout_marginRight="10dp"
            android:text="Wonderful"
            android:textSize="14sp"
            tools:ignore="RtlCompat" />

        </LinearLayout>

</layout>