<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?android:actionBarSize"
    android:background="@color/colorPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_margin="15dp"
        android:id="@+id/ivBackToolBar"
        android:layout_width="30dp"
        android:onClick="back"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_arrow_back_white" />

    <ImageView
        android:visibility="invisible"
        android:layout_width="40dp"
        android:layout_height="44dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="23dp"
        android:layout_toEndOf="@+id/nav"
        android:layout_toRightOf="@+id/nav"
        android:scaleType="centerCrop"
        android:src="@drawable/oasis_logo" />

    <com.oasissnacks.oasissnacks.utils.CustomTextView
        android:id="@+id/tvHeading"
        style="@style/OpenSans_Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_centerInParent="true"
        android:textSize="18sp"
        android:textColor="@color/white" />


    <TextView
        style="@style/OpenSans_SemiBold"
        android:id="@+id/tvEndText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="invisible"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:textSize="14sp"
        android:layout_centerVertical="true"
        android:textColor="@color/white"

        tools:ignore="RtlCompat" />
    <RelativeLayout
        android:id="@+id/rlCart"
        android:layout_alignParentEnd="true"
        android:layout_width="30dp"
        android:layout_marginEnd="10dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        tools:ignore="RtlCompat">

    <ImageView
        android:id="@+id/ivCart"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_shopping_cart_black"
        tools:ignore="RtlCompat" />
        <com.oasissnacks.oasissnacks.utils.CustomTextView
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:visibility="invisible"
            style="@style/OpenSans_Regular"
            android:id="@+id/tvCartValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="8sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_textvew_landing"/>
    </RelativeLayout>

</RelativeLayout>