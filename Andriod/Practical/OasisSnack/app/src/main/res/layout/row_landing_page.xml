<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="#05000000"
    android:paddingTop="13dp"
    android:paddingBottom="13dp"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_weight="0.4"
        tools:ignore="RtlCompat">


        <com.oasissnacks.oasissnacks.utils.CustomTextView
            android:id="@+id/tvPRoductName"
            style="@style/OpenSans_SemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sweet Leaf Tea"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <com.oasissnacks.oasissnacks.utils.CustomTextView
            android:id="@+id/tvPRoductDescription"
            style="@style/OpenSans_Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPRoductName"
            android:layout_marginTop="@dimen/twenty"

            android:text="Completely Organic and delicios"
            android:textSize="16sp" />


        <com.oasissnacks.oasissnacks.utils.CustomTextView
            android:id="@+id/product_subtotal"
            style="@style/OpenSans_Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvPRoductDescription"
            android:layout_marginTop="@dimen/twenty"
            android:text="Shop Now >"
            android:textColor="@color/black"
            android:textSize="16sp"
            />
    </RelativeLayout>


    <ImageView
        android:id="@+id/product_image"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:layout_weight="0.6"
        />


</LinearLayout>
