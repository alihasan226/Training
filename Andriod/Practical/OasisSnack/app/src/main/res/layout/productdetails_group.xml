<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp">
    <ImageView
        android:id="@+id/down"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:visibility="gone"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/down_arrow" />

    <ImageView
        android:id="@+id/up"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:rotation="-180"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:src="@drawable/down_arrow" />


    <com.oasissnacks.oasissnacks.utils.CustomTextView
        android:id="@+id/expandable_listgroup"
        style="@style/OpenSans_Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <ImageView
        android:id="@+id/explist_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_marginLeft="80dp"
        android:layout_toEndOf="@+id/lblListHeader"
        android:src="@drawable/expandable_group"
        android:layout_toRightOf="@+id/lblListHeader"
        android:layout_alignParentRight="true" />

</RelativeLayout>
